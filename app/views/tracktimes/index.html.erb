<div class="row">
  <aside class="col-sm-12">
    <% if @tracking  == true %>
    <!-- STOPフォーム -->
      <%= form_with(model: @endtracktime,url:trackend_path, class: "row g-3") do |f| %>
        <div class="col-sm-5 col-auto">
          <%= f.text_area :description, class: 'form-control', placeholder: "description",value: session[:description], rows: 1 %>
        </div>
        <div class="col-sm-2 col-auto">
          <%= f.collection_select :project_id , @projects, :id, :name, include_blank: "Select project" ,value: session[:project_id], class: 'form-control', rows: 1 %>
        </div>
         <div class="col-sm-2 col-auto">
          Start Time:<%= l session[:start_time].to_datetime,format: :short %>
          <% # = f.collection_select :name ,Project.all, :name,include_blank:"Select project" class: 'form-control', rows: 1 %>
        </div>
        <!-- <div class="col-sm-2 col-auto">
          Duration
        </div> -->
        <div class="col-sm-1 col-auto">
          <%#= hidden_field_tag :end_time, Time.zone.now %>
          <%= f.submit 'Stop', class: 'btn btn-danger ' %>
        </div>
      <% end %>  
    <% else %>
    
      <!-- STARTフォーム -->
      <%= form_with(model: @newtracktime,url:trackstart_path, class: "row g-3") do |f| %>   
        <div class="col-sm-5 col-auto">
          <%= f.text_area :description, class: 'form-control', placeholder: "description", rows: 1 %>
        </div>
        <div class="col-sm-2 col-auto">
          <%= f.collection_select :project_id , @projects, :id, :name, include_blank: "Select project" , class: 'form-control', rows: 1 %>
        </div>
         <div class="col-sm-2 col-auto">
          Start Time
          <% # = f.collection_select :name ,Project.all, :name,include_blank:"Select project" class: 'form-control', rows: 1 %>
        </div>
        <!--<div class="col-sm-2 col-auto">
          Duration
        </div> -->
        <div class="col-sm-1 col-auto">
           <%#= hidden_field_tag :start_time, Time.zone.now %>
           <%= f.submit 'Start', class: 'btn btn-primary ' %>
        </div>
    
      <% end %>
    <% end %>
  </aside>
  <div class="col-sm-12 mt-5">
    <%= render 'tracktimes/tracktimes', tracktimes: @tracktimes %>
  </div>
</div>